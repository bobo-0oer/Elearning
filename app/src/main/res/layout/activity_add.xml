<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context=".Home_Fragment.Activity.AddActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="#009999">

                <TextView
                    android:layout_width="20dp"
                    android:layout_height="30dp"/>
                <ImageView
                    android:id="@+id/exitActivityIV"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:background="@mipmap/icon_exit"
                    />
                <TextView
                    android:layout_width="20dp"
                    android:layout_height="30dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="发布动态"
                    android:textSize="20dp"
                    android:textColor="#f4f4f4"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="360dp"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                >

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="20dp" />

                <EditText
                    android:id="@+id/addActivityET"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="18dp"
                    android:hint="请在这里输入内容......"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="30dp" />


                <LinearLayout
                    android:layout_width="350dp"
                    android:layout_height="60dp"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="从相册选择要发布的图片:    "
                        android:textColor="#904f4f4f"
                        android:textSize="18dp"
                        android:gravity="center"/>
                    <Button
                        android:id="@+id/selectPhotoBtn"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:text="选择图片"
                        android:textSize="20dp"
                        android:textColor="#8000ff00"
                        android:background="@drawable/style_button"/>

                </LinearLayout>

                <ImageView
                    android:id="@+id/addActivityIV"
                    android:layout_width="320dp"
                    android:layout_height="200dp"
                    />

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp" />

            <Button
                android:id="@+id/AddActivityBtn"
                android:layout_width="320dp"
                android:layout_height="40dp"
                android:text="确认发布"
                android:textSize="18dp"
                android:background="@drawable/style_button_exit"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>