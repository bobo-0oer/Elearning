<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="@drawable/background_change_plan"
    tools:context=".Home_Fragment.My.ChangePlanActivity.ChangePlanActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="#4f4f4f">

        <TextView
            android:layout_width="20dp"
            android:layout_height="30dp"/>
        <ImageView
            android:id="@+id/exitChangePlanIV"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@mipmap/icon_exit"
            />
        <TextView
            android:layout_width="20dp"
            android:layout_height="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改学习计划"
            android:textSize="20dp"
            android:textColor="#f4f4f4"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="280dp"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <View
            android:layout_width="380dp"
            android:layout_height="15dp"/>

        <TextView
            android:layout_width="380dp"
            android:layout_height="20dp"
            android:drawableLeft="@mipmap/icon_plan_left"
            android:text="当前学习计划"
            android:gravity="center_vertical"
            />

        <View
            android:layout_width="380dp"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center">

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <View
                    android:layout_width="180dp"
                    android:layout_height="20dp" />
                <ImageView
                    android:id="@+id/EnglishBookIV"
                    android:layout_width="160dp"
                    android:layout_height="120dp"
                    android:background="@mipmap/book_english"
                    />
                <TextView
                    android:id="@+id/EnglishBookNameTV"
                    android:layout_width="120dp"
                    android:layout_height="30dp"
                    android:gravity="center"
                    android:text="单词书"
                    />


            </LinearLayout>

            <LinearLayout
                android:layout_width="180dp"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <View
                    android:layout_width="180dp"
                    android:layout_height="20dp" />
                
                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="30dp" 
                        android:gravity="center"
                        android:text="已学单词数："/>
                    <TextView
                        android:id="@+id/CompleteStudyTV"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="999"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="打卡天数"/>
                    <TextView
                        android:id="@+id/completeTV"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="50"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="180dp"
                    android:layout_height="40dp"
                    android:gravity="center_vertical">
                    <TextView
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:gravity="center"
                        android:text="每日单词数："/>
                    <TextView
                        android:id="@+id/DailyStudyTV"
                        android:layout_width="90dp"
                        android:layout_height="30dp"
                        android:gravity="center_vertical"
                        android:text="50"/>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="380dp"
        android:layout_height="1dp"
        android:background="#c9c9c9"/>

    <LinearLayout
        android:layout_width="380dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        >

        <View
            android:layout_width="380dp"
            android:layout_height="15dp"/>

        <TextView
            android:layout_width="380dp"
            android:layout_height="20dp"
            android:drawableLeft="@mipmap/icon_plan_left"
            android:text="修改学习计划"
            android:gravity="center_vertical"
            />
        <View
            android:layout_width="380dp"
            android:layout_height="20dp"/>

        <LinearLayout
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="150dp"
                android:layout_height="30dp"
                android:text="每日单词数"
                android:textSize="18dp"
                />

            <RadioGroup
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RadioButton
                    android:id="@+id/plan30"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="10"
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/plan50"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="20"
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/plan100"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="30"
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/plan150"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="50"
                    android:textSize="18dp"/>
                <RadioButton
                    android:id="@+id/plan200"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"
                    android:text="100"
                    android:textSize="18dp"/>


            </RadioGroup>

            <View
                android:layout_width="380dp"
                android:layout_height="20dp"/>

            <Button
                android:id="@+id/queryChangeBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="确认提交"
                android:textSize="24dp"
                android:background="@drawable/style_button_complete"
                />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>